<?xml version="1.0" encoding="utf-8"?>

<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uv_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:elevation="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ad_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_ad_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스토어"
                    android:textColor="@color/White"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_ad_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="1000원"
                    android:textColor="@color/White"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_ad_headline"
            android:layout_alignStart="@id/tv_ad_headline"
            android:layout_marginBottom="5dp"
            android:elevation="100dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ad_learnMore"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_corner_fg"
                android:paddingHorizontal="8dp"
                android:text="learn more"
                android:textColor="@color/Black" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_ad_headline"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_ad_advertiser"
            android:layout_marginHorizontal="20dp"
            android:elevation="100dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ad_advertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_ad_body"
            android:layout_alignStart="@id/tv_ad_headline"
            android:textColor="@color/White" />


        <RatingBar
            android:id="@+id/rb_ad_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_ad_body"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tv_ad_advertiser"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5" />


        <TextView
            android:id="@+id/tv_ad_body"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cv_ad_swipe"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="100dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/White"
            android:textSize="15sp" />

        <TextView
            style="@style/AppTheme.AdAttribution"
            android:layout_alignEnd="@id/cv_ad_swipe"
            android:layout_alignBottom="@id/cv_ad_swipe"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="100dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ad_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/Black"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/mv_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:gravity="center"
                android:scaleType="fitCenter" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>

