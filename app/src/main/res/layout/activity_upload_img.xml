<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UploadImgActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_post_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="저장"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/tv_post_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_post_save"
        android:text="메모"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/et_post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_post_memo"
        android:textSize="15dp"
        android:hint="이곳에 텍스트 입력"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_post_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진첨부"
        android:textSize="25dp"
        android:layout_below="@id/et_post_content"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:id="@+id/btn_post_addPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_post_picture"
        android:src="@drawable/ic_insert_photo_black_24dp"
        android:layout_alignParentRight="true"
        />

    <GridView
        android:id="@+id/gv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_post_picture"
        android:layout_marginTop="10dp">
    </GridView>




</RelativeLayout>