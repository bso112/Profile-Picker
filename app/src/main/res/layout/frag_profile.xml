<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rv_profile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_face_24" />

        <TextView
            android:id="@+id/tv_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_profile_icon"
            android:maxLength="10"
            android:text="@string/lorem"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_nickname"
            android:layout_alignLeft="@id/tv_profile_nickname"
            android:text="bso11246@gmail.com"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_profile_withdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:layout_below="@+id/btn_profile_logout"
            android:textSize="8sp"
            android:layout_alignRight="@+id/btn_profile_logout"
            />

        <Button
            android:id="@+id/btn_profile_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="로그아웃"
            android:textSize="15sp" />

    </RelativeLayout>


    <ListView
        android:id="@+id/lv_myPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_profile"
        android:divider="@color/Transparent" />


    <ImageButton
        android:id="@+id/ib_profile_create"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/DarkGray"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_add_24"
        android:tint="@color/White" />


</RelativeLayout>